<Window x:Class="CalculationWithMultiThreads.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculationWithMultiThreads"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="tbNumbers" Width="100" Margin="5" Text="{Binding Numbers, Mode=TwoWay}"/>
            <Button x:Name="btnStartCalcSingleThread" Margin="5" Width="120" Height="30" Content="Start 1 Thread" Click="StartCalcSingleThread_Click"/>
            <Button x:Name="btnStartCalcMultiThread" Margin="5" Width="120" Height="30" Content="Start x Threads" Click="StartCalcMultiThread_Click"/>
            <Button x:Name="btnStopCalc" Margin="5" Width="120" Height="30" Content="Stop" Click="StopCalc_Click"/>
            <Slider x:Name="sldThreads" Margin="5" Width="500" Minimum="1" Maximum="100" Value="{Binding Threads, Mode=TwoWay}"/>
            <TextBox x:Name="tbThreads" Margin="5" Width="30" Text="{Binding Threads, Mode=TwoWay}"/>
            <TextBox x:Name="tbOut" Width="300" Text=""/>
            <StackPanel x:Name="spBars">
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>