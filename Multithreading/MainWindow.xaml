<Window x:Class="Multithreading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Multithreading"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="btnStartCalc" Width="100" Height="30" Content="Start" Click="StartCalc_Click"/>
            <ProgressBar x:Name="pbBar" Width="300" Height="30" Maximum="1000"/>
            <TextBox x:Name="tbOut" Width="250" Text=""/>
        </StackPanel>
    </Grid>
</Window>
